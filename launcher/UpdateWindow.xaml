<Window x:Class="launcher.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:launcher"
        mc:Ignorable="d"
        Title="Launcher update in progress..." Height="89" Width="369" Background="Black" Foreground="White" Loaded="Window_Loaded">
    <Grid>
        <Label Content="A new launcher update is available. Updating...&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="349" HorizontalContentAlignment="Center" Height="27" Foreground="White"/>
        <ProgressBar x:Name="UpdateBar" Height="21" Margin="10,37,10,0" VerticalAlignment="Top" Foreground="#FF009CFF" BorderBrush="Black" Background="#FF050505"/>

    </Grid>
</Window>
