<Window x:Class="launcher.FTS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:launcher"
        mc:Ignorable="d"
        Title="First time setup" SizeToContent="WidthAndHeight" Height="98" Width="405" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Hi there! Please wait while we set up the launcher for you." HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="progress_bar" Margin="10,32,10,31" SmallChange="1"/>
        <Label x:Name="progress_label" Content="Warming up..." HorizontalContentAlignment="Center" Margin="10,51,10,5"/>

    </Grid>
</Window>
